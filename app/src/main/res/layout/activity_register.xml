<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".RegisterActivity"
    android:layout_marginTop="0sp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding = "0sp"
        android:layout_margin= "16sp">

        <TextView
            android:id="@+id/signupTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/montserrat"
            android:text="SIGN UP"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textColor="#2C87FF"
            android:textSize="34sp"
            android:textStyle="bold"
            android:typeface="normal" />

        <TextView
            android:id="@+id/fullnameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:layout_below="@+id/signupTextView"
            android:text="Full Name"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="10sp"/>



        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id = "@+id/editTextSpecialty"
            android:layout_below="@+id/fullnameTextView"
            android:inputType="textPersonName"
            android:textSize="16sp"

            android:layout_marginTop="16sp"
            android:background="@drawable/border"
            android:padding ="8sp"
            />

        <TextView
            android:id="@+id/emailTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:layout_below="@+id/editTextSpecialty"
            android:text="Email"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="16sp"/>



        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id = "@+id/editTextYearsExperience"
            android:layout_below="@+id/emailTextView"
            android:inputType="textEmailAddress"
            android:textSize="16sp"
            android:layout_marginTop="16sp"
            android:background="@drawable/border"
            android:padding ="8sp"

            />

        <TextView
            android:id="@+id/birthTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:layout_below="@+id/editTextYearsExperience"
            android:text="Date of Birth"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="16sp"/>


        <EditText
            android:id="@+id/editTextNumPatient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/birthTextView"
            android:hint="(dd/mm/yy)"
            android:focusable="false"
            android:layout_marginTop="17dp"
            android:background="@drawable/border"
            android:inputType="text"
            android:padding="8sp"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/phoneNumberTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editTextNumPatient"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/montserrat"
            android:text="Phone Number"
            android:textSize="16sp"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/editTextPhoneNumber"
            android:layout_width="180sp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16sp"
            android:layout_below="@+id/phoneNumberTextView"

            android:background="@drawable/border"
            android:inputType="phone"
            android:padding="8sp"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/genderTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editTextNumPatient"
            android:layout_marginLeft="220sp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/montserrat"
            android:text="Gender"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/genderSpinner"
            style="@style/Widget.AppCompat.Light.DropDownItem.Spinner"
            android:layout_width="320sp"
            android:layout_height="wrap_content"
            android:layout_below="@id/genderTextView"
            android:layout_marginLeft="190sp"
            android:layout_marginTop="16dp"
            android:background="@drawable/border"
            android:padding="10sp" />

        <TextView
            android:id="@+id/roleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editTextPhoneNumber"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/montserrat"
            android:text="Role"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/roleSpinner"
            style="@style/Widget.AppCompat.DropDownItem.Spinner"
            android:layout_width="180sp"
            android:layout_height="40dp"
            android:layout_below="@id/roleTextView"
            android:layout_marginTop="16sp"
            android:background="@drawable/border" />

        <TextView
            android:id="@+id/passwordTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/roleSpinner"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/montserrat"
            android:text="Password"
            android:textSize="16sp"
            android:textStyle="bold" />


        <com.google.android.material.textfield.TextInputLayout

            android:id="@+id/passwordInputLayout"
            android:layout_below="@+id/passwordTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16sp"

            app:errorEnabled="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"


            app:passwordToggleEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="@drawable/border"
                android:inputType="textPassword" />
        </com.google.android.material.textfield.TextInputLayout>
<!--        <EditText-->
<!--            android:id="@+id/editTextPassword"-->
<!--            app:endIconMode = "password_toggle"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_marginTop="16sp"-->
<!--            android:hint="At least 8 characters"-->
<!--            android:layout_below="@+id/passwordTextView"-->


<!--            android:background="@drawable/border"-->
<!--            android:inputType="textPassword"-->
<!--            android:padding="8sp"   -->
<!--            android:textSize="16sp" />-->

        <Button
            android:id="@+id/registerButton"
            style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
            android:layout_width="277dp"
            android:layout_height="46dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/passwordInputLayout"
            android:layout_marginTop="-3dp"
            android:backgroundTint="#2C87FF"
            android:text="Register Account"
            android:textColorHighlight="#2C87FF"
            android:textColorLink="#2C87FF"
            android:textSize="16sp"></Button>

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id = "@+id/progressBar"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:visibility="gone"
            ></ProgressBar>

        <TextView
            android:id="@+id/dontHaveText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/registerButton"
            android:layout_marginLeft="40sp"
            android:layout_marginTop="16dp"
            android:text="Already have an account?"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/loginText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/registerButton"
            android:layout_alignLeft="@id/dontHaveText"
            android:layout_marginLeft="180sp"
            android:layout_marginTop="16sp"
            android:text="Click here to log in"
            android:textSize="15sp"
            android:textStyle="bold"
             />




    </RelativeLayout>




</ScrollView>