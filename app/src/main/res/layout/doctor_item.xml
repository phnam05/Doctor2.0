<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10sp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_border"
        android:orientation="vertical"
        android:padding="5sp">

        <ImageView
            android:id="@+id/doctor_image"
            android:layout_width="101dp"
            android:layout_height="69dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/circle_doctor" />

        <TextView
            android:id="@+id/doctor_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/doctor_image"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@id/doctor_image"
            android:fontFamily="@font/montserrat"
            android:text="Dr Anna Delvey"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/doctor_specialty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/doctor_name"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@id/doctor_image"
            android:text="Cardiologist"
            android:textAlignment="center" />

        <LinearLayout
            android:id="@+id/info_patients"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/doctor_image"
            android:layout_marginStart="5sp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="5sp"
                android:src="@drawable/patient" />

            <TextView
                android:id="@+id/patientnum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="50+ Patients" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/experience"
            android:layout_width="157dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/info_patients"
            android:layout_marginStart="5sp"
            android:layout_marginTop="9dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="5sp"
                android:src="@drawable/work_time" />

            <TextView
                android:id="@+id/expyear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="5 Years Experience" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/address"
            android:layout_width="157dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/experience"
            android:layout_marginStart="5sp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/address" />

            <TextView
                android:id="@+id/location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="New York" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/contact_container"
            android:layout_width="156dp"
            android:layout_height="30dp"
            android:layout_alignTop="@id/info_patients"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="5sp"
            android:orientation="horizontal">

            <!-- Your phone and email TextViews go here -->
            <!-- Example for phone number -->
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/phone_call" />

            <TextView
                android:id="@+id/phonenum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/info_patients"
                android:layout_marginEnd="16dp"
                android:drawablePadding="8dp"
                android:text="(+01) 809 202 12" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/email_container"
            android:layout_width="157sp"
            android:layout_height="wrap_content"
            android:layout_below="@id/contact_container"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8sp"
            android:layout_marginEnd="5sp"
            android:orientation="horizontal">

            <!-- Your phone and email TextViews go here -->
            <!-- Example for phone number -->
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/mail" />

            <TextView
                android:id="@+id/email"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/experience"
                android:layout_marginEnd="5sp"
                android:drawablePadding="8dp"
                android:text="anna.dr@gmail.com" />


        </LinearLayout>
    </RelativeLayout>


</androidx.cardview.widget.CardView>