<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="0sp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16sp"
        android:padding="0sp">

        <TextView
            android:id="@+id/signupTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/montserrat"
            android:text="DOCTOR INFORMATION"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textColor="#2C87FF"
            android:textSize="34sp"
            android:textStyle="bold"
            android:typeface="normal" />

        <TextView
            android:id="@+id/additionalTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/signupTextView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10sp"
            android:fontFamily="@font/montserrat"
            android:text="Please add some more information about you"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/fullnameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/additionalTextView"
            android:layout_marginTop="30sp"
            android:fontFamily="@font/montserrat"
            android:text="Specialty"
            android:textSize="16sp"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/editTextSpecialty"
            android:layout_width="320sp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fullnameTextView"
            android:layout_marginTop="16sp"
            android:background="@drawable/border"

            android:inputType="text"
            android:padding="8sp"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/emailTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editTextSpecialty"
            android:layout_marginTop="16sp"
            android:fontFamily="@font/montserrat"
            android:text="Years of Experience"
            android:textSize="16sp"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/editTextYearsExperience"
            android:layout_width="320sp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/emailTextView"
            android:layout_marginTop="16sp"
            android:background="@drawable/border"
            android:inputType="number|numberDecimal"
            android:padding="8sp"
            android:textSize="16sp"

            />

        <TextView
            android:id="@+id/birthTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editTextYearsExperience"
            android:layout_marginTop="16sp"
            android:fontFamily="@font/montserrat"
            android:text="Number of patients taken care"
            android:textSize="16sp"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/editTextNumPatient"
            android:layout_width="320sp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/birthTextView"
            android:layout_marginTop="17dp"
            android:background="@drawable/border"
            android:inputType="number|numberDecimal"
            android:padding="8sp"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/phoneNumberTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editTextNumPatient"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/montserrat"
            android:text="Base Location"
            android:textSize="16sp"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/editTextLocation"
            android:layout_width="320sp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/phoneNumberTextView"
            android:layout_marginTop="16sp"

            android:background="@drawable/border"
            android:padding="8sp"
            android:textSize="16sp" />


        <Button
            android:id="@+id/submitButton"
            android:layout_width="277dp"
            android:layout_height="46dp"

            android:layout_below="@id/editTextLocation"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            android:backgroundTint="#2C87FF"
            android:text="Submit"
            android:fontFamily="@font/montserrat"
            android:textSize="16sp"></Button>

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:visibility="gone"></ProgressBar>


    </RelativeLayout>

</ScrollView>