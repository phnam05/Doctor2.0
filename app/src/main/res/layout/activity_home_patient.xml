<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/background_home"
>


        <TextView
            android:id="@+id/textView2"
            android:layout_width="320sp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="66dp"
            android:layout_marginTop="68dp"
            android:layout_marginEnd="55dp"
            android:fontFamily="@font/montserrat"
            android:text="Welcome! Let's setup appointments with experienced doctors"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.823"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnViewAppointment" />

        <Button
            android:id="@+id/btnSetAppointment"
            android:layout_width="200dp"
            android:layout_height="44dp"
            android:layout_marginTop="65dp"
            android:backgroundTint="#1D6EDA"
            android:text="SET APPOINTMENT"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.691"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/btnViewAppointment"
            android:layout_width="200dp"
            android:layout_height="44dp"
            android:layout_below="@id/btnSetAppointment"
            android:layout_marginTop="16dp"
            android:backgroundTint="#1D6EDA"
            android:text="VIEW APPOINTMENT"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.691"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnSetAppointment"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/viewAppointmentImg"
            android:layout_width="57dp"
            android:layout_height="44dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/btnSetAppointment"
            app:layout_constraintTop_toTopOf="@+id/btnViewAppointment"
            app:srcCompat="@drawable/logo" />


        <Button
            android:id="@+id/btnLogout"
            android:layout_width="57dp"
            android:layout_height="62dp"
            android:layout_below="@id/btnViewAppointment"
            android:layout_marginStart="28dp"
            android:layout_marginTop="100dp"
            android:backgroundTint="#9DADC1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="29dp"
            android:layout_height="30dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="668dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/out_logo"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:layout_width="150dp"
            android:layout_height="134dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:src="@drawable/image_18__1_"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="212dp"

            android:fontFamily="@font/montserrat"
            android:text="Home Page"
            android:textColor="@color/appTheme"
            android:textSize="28sp"


            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/setAppointmentImg"
            android:layout_width="57dp"
            android:layout_height="44dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/btnSetAppointment"
            app:layout_constraintTop_toTopOf="@+id/btnSetAppointment"
            app:srcCompat="@drawable/final_logo" />


</androidx.constraintlayout.widget.ConstraintLayout>