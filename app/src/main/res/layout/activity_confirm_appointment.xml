<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="0dp"
    android:background = "@drawable/confirmation_screen"
    android:gravity="center_horizontal"
    tools:context=".ConfirmAppointmentActivity">

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:fontFamily="@font/montserrat"
    android:text="APPOINTMENT CONFIRMATION"
        android:layout_marginTop="10sp"
    android:textAlignment="center"
    android:textColor="#2C87FF"
    android:textSize="30sp"
    android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="50sp"
        android:fontFamily="@font/montserrat"
        android:textStyle="bold"
        android:textSize="16sp"
        android:gravity="center"
        android:text="Appointment request submitted!" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop = "15sp"
        android:background="@drawable/card_border"
        android:padding="14dp">

        <TextView
            android:id="@+id/tvAppointmentInfo"
            android:layout_width="match_parent"
            android:textSize="18sp"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/rounded_button"
            android:drawablePadding="8dp"
            android:fontFamily="@font/montserrat"
            android:padding="3dp"
            android:text="Patient name\n15 Jan 2023, 09:00am - 12:00am\nOnline\nNote: Please be gentle" />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop = "210sp"
        android:fontFamily="@font/montserrat"
        android:textSize="18sp"
        android:gravity="center"

        android:text="Please wait for doctor's confirmation!\n\n
Thank you for booking appointments with us" />


    <Button
        android:id="@+id/btnHome"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:layout_marginTop="40sp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="#2C87FF"
        android:fontFamily="@font/montserrat"
        android:text="Back to Home" />

</LinearLayout>